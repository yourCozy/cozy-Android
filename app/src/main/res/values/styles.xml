<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="Widget.BottomNavigationView14" parent="@style/Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/nanum_square_roundb</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/divide_line2</item>
        <item name="android:dividerVertical">@drawable/divide_line2</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="colorPrimary">@color/white</item>                                <!-- 배경 -->
        <item name="android:textColorPrimary">@android:color/darker_gray</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@android:color/darker_gray</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">@color/colorAccent</item>                    <!-- 하단 움직이는 바 색-->
        <item name="android:elevation">0dp</item>
    </style>

    <style name="TabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nanum_square_roundb</item>
    </style>

    <style name="title_text" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/fontfamily</item>
        <item name="fontWeight">700</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="hint_text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/fontfamily</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
</resources>
