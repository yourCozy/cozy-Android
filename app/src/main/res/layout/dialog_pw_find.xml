<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@color/white"
    android:id="@+id/dialog_pw_find"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_pw_find"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textColor="@color/black"
            android:fontFamily="@font/fontfamily"
            android:textFontWeight="500"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textSize="16dp"
            />

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/et_email_userCheck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/inputfield_320_x_44"
        android:inputType="textMultiLine|textNoSuggestions"
        android:hint="이메일"
        android:paddingStart="20dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="14dp"
        android:fontFamily="@font/fontfamily"
        android:textFontWeight="500"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tb_pw_find"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_email_login"
        android:text="인증요청"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/fontfamily"
        android:textFontWeight="700"
        app:layout_constraintTop_toBottomOf="@id/et_email_userCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>