<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_gallery_img"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="12:11"
        android:src="@drawable/img_null"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/profile_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_gallery_img"
        app:layout_constraintEnd_toEndOf="@id/iv_gallery_img"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:buttonTint="#fdb82d"/>


</androidx.constraintlayout.widget.ConstraintLayout>