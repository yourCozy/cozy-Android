<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboarding"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.ThirdFragment">

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/icon_onboarding"
        android:fontFamily="@font/fontfamily"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:text="01"
        android:textColor="@color/colorAccent"
        android:textFontWeight="900"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontfamily"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="경험을 주는 독립서점"
        android:textColor="@color/white"
        android:textFontWeight="900"
        android:textSize="26sp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fontfamily"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4sp"
        android:paddingEnd="51dp"
        android:text="독립서점에서 진행되는 다양한 문화활동을\n모아보고, 신청까지 한번에!"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitEnd"
        android:layout_marginTop="43dp"
        app:layout_constraintDimensionRatio="0.65:1"
        android:src="@drawable/img_onboarding_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content" />

</androidx.constraintlayout.widget.ConstraintLayout>