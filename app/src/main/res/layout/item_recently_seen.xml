<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_recently_seen_profile"
        android:layout_width="0dp"
        android:layout_height="114dp"
        app:layout_constraintDimensionRatio="1.2:1"
        android:scaleType="centerCrop"
        android:contentDescription="bookstore profile image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recently_seen_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/fontfamily"
        android:includeFontPadding="false"
        android:text="홍철책빵"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_recently_seen_profile"
        app:layout_constraintTop_toBottomOf="@+id/iv_recently_seen_profile" />

    <TextView
        android:id="@+id/tv_recently_seen_null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미지 준비중이에요!"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_recently_seen_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_recently_seen_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_recently_seen_profile" />
</androidx.constraintlayout.widget.ConstraintLayout>