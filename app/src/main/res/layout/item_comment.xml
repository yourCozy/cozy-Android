<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="18dp"
    android:paddingRight="23dp"
    android:paddingLeft="20dp"
    android:paddingBottom="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_profile"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/img_bookstore_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지윤김"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/fontfamily"
        android:textFontWeight="700"
        app:layout_constraintStart_toEndOf="@id/comment_profile"
        app:layout_constraintTop_toTopOf="@id/comment_profile"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20.09.06  11:30"
        android:textSize="12sp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/fontfamily"
        android:textFontWeight="300"
        app:layout_constraintStart_toEndOf="@id/comment_name"
        app:layout_constraintBottom_toBottomOf="@id/comment_name"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="이 활동은 홍철책방에 다시 찾아온 감각적 전시입니다. 1만여 점의 작품 중 주목할 만한 작품을 올해 20주년을 맞아 전시를 진행하고 있습니다."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/fontfamily"
        android:textFontWeight="500"
        android:lineSpacingExtra ="5dp"
        app:layout_constraintTop_toBottomOf="@id/comment_name"
        app:layout_constraintStart_toEndOf="@id/comment_profile"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="12dp"/>
    
    <TextView
        android:id="@+id/comment_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        android:textSize="12sp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/fontfamily"
        android:textFontWeight="300"
        app:layout_constraintTop_toBottomOf="@id/comment_text"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="43dp"/>

    <ImageView
        android:id="@+id/comment_line"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/line_comment"
        app:layout_constraintTop_toTopOf="@id/comment_change"
        app:layout_constraintBottom_toBottomOf="@id/comment_change"
        app:layout_constraintStart_toEndOf="@id/comment_change"/>

    <TextView
        android:id="@+id/comment_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textSize="12sp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/fontfamily"
        android:textFontWeight="300"
        app:layout_constraintStart_toEndOf="@id/comment_line"
        app:layout_constraintTop_toBottomOf="@id/comment_text"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="3dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>