<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="17dp"
    android:background="@color/white"
    android:outlineSpotShadowColor="@color/item_shadow">

    <ImageView
        android:id="@+id/iv_interests_bookstore"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/img_bookstore_list"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="320:216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/interests_tag1"
        style="@style/tag_text_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/icon_round"
        android:text="#이국적인"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/interests_tag2"
        style="@style/tag_text_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/icon_round"
        android:text="#베이커리"
        app:layout_constraintStart_toEndOf="@+id/interests_tag1"
        app:layout_constraintTop_toTopOf="@+id/interests_tag1" />

    <TextView
        android:id="@+id/interests_tag3"
        style="@style/tag_text_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:background="@drawable/icon_round"
        android:text="#대관가능"
        app:layout_constraintStart_toEndOf="@+id/interests_tag2"
        app:layout_constraintTop_toTopOf="@+id/interests_tag2" />

    <TextView
        android:id="@+id/tv_interests_detail"
        style="@style/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:includeFontPadding="true"
        android:lineSpacingExtra="6sp"
        android:maxLines="2"
        android:text="매일 새로 구운 빵과 함께하는 달콤한 책\n그리고 오늘, 봄날의 책방"
        android:textFontWeight="700"
        app:layout_constraintEnd_toEndOf="@id/iv_interests_bookstore"
        app:layout_constraintStart_toStartOf="@id/iv_interests_bookstore"
        app:layout_constraintTop_toBottomOf="@id/iv_interests_bookstore" />

    <ImageView
        android:id="@+id/iv_interests_location"
        android:layout_width="11dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_locationgray"
        app:layout_constraintStart_toStartOf="@id/tv_interests_detail"
        app:layout_constraintTop_toBottomOf="@id/tv_interests_detail" />

    <TextView
        android:id="@+id/tv_interests_bookstore_name"
        style="@style/hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:lineSpacingExtra="6sp"
        android:text="코지책방"
        android:textFontWeight="700"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_interests_location"
        app:layout_constraintTop_toTopOf="@id/iv_interests_location" />

    <TextView
        android:id="@+id/tv_interests_bookstore_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/fontfamily"
        android:maxLines="1"
        android:text="서울특별시 용산구 한강 한강대로102길 용산구 한강한강대로102길 용산구 한강"
        android:textColor="@color/dark_gray"
        android:textFontWeight="300"
        android:textSize="12sp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="@id/tv_interests_detail"
        app:layout_constraintStart_toStartOf="@id/tv_interests_detail"
        app:layout_constraintTop_toBottomOf="@id/iv_interests_location" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/icon_save_white"
        app:layout_constraintEnd_toEndOf="@id/iv_interests_bookstore"
        app:layout_constraintTop_toTopOf="@id/iv_interests_bookstore" />
</androidx.constraintlayout.widget.ConstraintLayout>