<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboarding"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.LastFragment">

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/icon_onboarding"
        android:fontFamily="@font/fontfamily"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:text="03"
        android:textColor="@color/colorAccent"
        android:textFontWeight="900"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontfamily"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="당신이 스쳤던 독립서점"
        android:textColor="@color/white"
        android:textFontWeight="900"
        android:textSize="26sp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:paddingEnd="51dp"
        android:fontFamily="@font/fontfamily"
        android:textFontWeight="500"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:text="내 주변 지역 또는 원하는 지역에 위치한\n독립서점을 찾아봐요! 오늘은 어디로 가볼까요?" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="43dp"
        app:layout_constraintDimensionRatio="0.65:1"
        android:scaleType="fitEnd"
        android:src="@drawable/img_onboarding_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content" />

</androidx.constraintlayout.widget.ConstraintLayout>