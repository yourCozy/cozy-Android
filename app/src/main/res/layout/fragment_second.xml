<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/onboarding"
    tools:context=".onboarding.SecondFragment">

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/fontfamily"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="01"
        android:textColor="@color/white"
        android:textFontWeight="300"
        android:textSize="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontfamily"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6dp"
        android:text="취향이 깃든 독립서점"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="26dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:paddingEnd="51dp"
        android:fontFamily="@font/fontfamily"
        android:textFontWeight="300"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:text="취향으로 추천받고 공간으로 느끼자!\n마음에 드는 공간은 관심책방으로 저장해요." />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/img_onboarding_2"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content" />

</androidx.constraintlayout.widget.ConstraintLayout>