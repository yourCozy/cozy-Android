<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yourcozy.cozy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:usesCleartextTraffic="true"
        android:name="com.yourcozy.cozy.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.yourcozy.cozy.SplashActivity"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.yourcozy.cozy.onboarding.OnBoardingPreferenceActivity" />
        <activity
            android:name="com.yourcozy.cozy.onboarding.OnBoardingActivity" >
        </activity>
        <activity android:name="com.yourcozy.cozy.views.main.RecommendDetailActivity" />
        <activity android:name="com.yourcozy.cozy.views.category.CategoryListActivity" />
        <activity android:name="com.yourcozy.cozy.LoginActivity" />
        <activity android:name="com.yourcozy.cozy.views.mypage.Notice.NoticeActivitiy"/>
        <activity android:name="com.yourcozy.cozy.views.mypage.ProfileActivity" />
        <activity android:name="com.yourcozy.cozy.views.SearchActivity"/>
        <activity android:name="com.yourcozy.cozy.MainActivity" >
        </activity>
        <activity android:name="com.yourcozy.cozy.views.mypage.setting.VersionInfoActivity"/>
        <activity android:name="com.yourcozy.cozy.views.mypage.setting.OpenSourceLicenseActivity"/>
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />
        <activity android:name="com.yourcozy.cozy.views.mypage.Interest.InterestsActivity"/>
        <activity android:name="com.yourcozy.cozy.views.main.event.EventDetailActivity" />
        <activity android:name=".views.mypage.profile.ProfileSetActivity"/>
    </application>

</manifest>