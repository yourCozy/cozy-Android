<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yourcozy.cozy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".views.main.review.SimpleReviewActivity"></activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".onboarding.OnBoardingPreferenceActivity" />
        <activity android:name=".onboarding.OnBoardingActivity"></activity>
        <activity android:name=".views.main.RecommendDetailActivity" />
        <activity android:name=".views.category.CategoryListActivity" />
        <activity android:name=".signin.LoginActivity" />
        <activity android:name=".views.mypage.Notice.NoticeActivitiy" />
        <activity android:name=".views.mypage.ProfileActivity" />
        <activity android:name=".views.SearchActivity" />
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".views.mypage.setting.VersionInfoActivity" />
        <activity android:name=".views.mypage.setting.OpenSourceLicenseActivity" />
        <activity android:name=".signin.EmailLoginActivity"/>
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

        <activity android:name=".views.mypage.Interest.InterestsActivity" />
        <activity android:name=".views.main.event.EventDetailActivity" />
    </application>

</manifest>